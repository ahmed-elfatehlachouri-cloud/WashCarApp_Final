rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function signedIn() { return request.auth != null; }

    function userRole() {
      return signedIn() && exists(/databases/$(database)/documents/users/$(request.auth.uid))
        ? get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role
        : null;
    }

    function isAdmin() { return signedIn() && userRole() == "admin"; }
    function isOwner() { return signedIn() && userRole() == "owner"; }
    function isClient() { return signedIn() && userRole() == "client"; }

    function ownsCarwash(carwashId) {
      return signedIn()
        && exists(/databases/$(database)/documents/carwashes/$(carwashId))
        && get(/databases/$(database)/documents/carwashes/$(carwashId)).data.ownerId == request.auth.uid;
    }

    function serviceBelongsToCarwash(serviceId, carwashId) {
      return exists(/databases/$(database)/documents/services/$(serviceId))
        && get(/databases/$(database)/documents/services/$(serviceId)).data.carwashId == carwashId;
    }

    // --- USERS ---
    match /users/{uid} {
      allow read: if signedIn() && request.auth.uid == uid;
      allow create: if signedIn() && request.auth.uid == uid;
      allow update: if signedIn()
        && request.auth.uid == uid
        && (!("role" in resource.data) || request.resource.data.role == resource.data.role);
      allow list: if isAdmin();
      allow delete: if false;
    }

    // --- CARWASHES ---
    match /carwashes/{carwashId} {
      allow read: if signedIn();
      allow create: if isOwner() && request.resource.data.ownerId == request.auth.uid;
      allow update, delete: if ownsCarwash(carwashId) || isAdmin();
    }

    // --- SERVICES ---
    match /services/{serviceId} {
      allow read: if signedIn();
      allow create: if isOwner() && request.resource.data.ownerId == request.auth.uid && ownsCarwash(request.resource.data.carwashId);
      allow update: if (isAdmin() || (signedIn() && resource.data.ownerId == request.auth.uid))
        && request.resource.data.ownerId == resource.data.ownerId
        && request.resource.data.carwashId == resource.data.carwashId;
      allow delete: if isAdmin() || (signedIn() && resource.data.ownerId == request.auth.uid);
    }

    // --- RESERVATIONS ---
    match /reservations/{reservationId} {
      allow create: if isClient()
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.carwashId is string
        && request.resource.data.serviceId is string
        && exists(/databases/$(database)/documents/carwashes/$(request.resource.data.carwashId))
        && serviceBelongsToCarwash(request.resource.data.serviceId, request.resource.data.carwashId);

      allow read: if isAdmin()
        || (signedIn() && resource.data.userId == request.auth.uid)
        || (isOwner() && (ownsCarwash(resource.data.carwashId) || resource.data.ownerId == request.auth.uid));

      allow update: if (
          // Admin ou Propri√©taire peuvent tout changer
          (isAdmin() || (isOwner() && ownsCarwash(resource.data.carwashId)))
          ||
          // Client peut changer status (pour annuler) OU isSeenByClient (pour le badge)
          (isClient() && resource.data.userId == request.auth.uid && (
            (resource.data.status == "pending" && request.resource.data.status == "canceled") 
            || 
            (request.resource.data.diff(resource.data).changedKeys().hasOnly(["isSeenByClient", "updatedAt"]))
          ))
        ) 
        && (!("updatedAt" in request.resource.data) || request.resource.data.updatedAt is timestamp);

      allow delete: if false;
    }

    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}